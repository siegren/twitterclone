<div class="form-group">
  <%= form_for(@tweet) do |f| %>
  <% if @tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

      <ul>
      <% @tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_area :post, :value => "Compose tweet here...", class: 'form-control' %>
  </div>
  <div class="field hide-field">
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id, :value => current_user.id %>
  </div>
      <div class="form-group">
        <%= f.label :image, class: 'col-sm-3 control-label'  %>
        <div class="col-sm-6">
            <%= f.file_field :avatar%> <br />
        </div>
    </div>
    
  <div class="actions">
    <%= f.submit 'Post Tweet', class: 'submit-post form-control' %>
  </div>
<% end %>

</div>
